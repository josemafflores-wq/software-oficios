  { id: 'reformas', name: 'Reformas', icon: 'üß±', color: 'bg-orange-100 text-orange-700' },
  { id: 'climatizacion-y-aire-acondicionado', name: 'Climatizaci√≥n', icon: '‚ùÑÔ∏è', color: 'bg-cyan-100 text-cyan-700' },
