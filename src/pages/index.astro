---
// Importamos los datos del JSON
import softwares from '../softwares.json';
import '../global.css'; // <--- AÑADE ESTA LÍNEA AQUÍ
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ObraDigital - Comparador de Software para Gremios</title>
</head>
<body class="bg-gray-50 text-gray-900 font-sans">

    <header class="bg-blue-700 text-white py-12 px-4 shadow-md">
        <div class="max-w-6xl mx-auto text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">ObraDigital</h1>
            <p class="text-xl text-blue-100">El comparador de software para reformas, fontaneros y electricistas</p>
        </div>
    </header>

    <main class="max-w-6xl mx-auto py-12 px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {softwares.map((item) => (
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
                    <div class="p-6">
                        <h2 class="text-2xl font-bold mb-2">{item.name}</h2>
                        <p class="text-gray-600 text-sm mb-4">{item.short_description}</p>
                        
                        <div class="mb-4">
                            <span class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Ideal para:</span>
                            <div class="flex flex-wrap gap-2 mt-1">
                                {item.target_gremios.map((gremio) => (
                                    <span class="bg-blue-50 text-blue-700 text-xs px-2 py-1 rounded-full font-medium">
                                        {gremio}
                                    </span>
                                ))}
                            </div>
                        </div>

                        <div class="flex items-center justify-between mt-6">
                            <div class="text-lg font-bold text-gray-900">
                                {item.pricing.start_price ? `${item.pricing.start_price}€/mes` : 'Consultar'}
                            </div>
                            <a href={`/software/${item.id}`} class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-bold transition-colors">
                                Ver Análisis
                            </a>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </main>

</body>
</html>

