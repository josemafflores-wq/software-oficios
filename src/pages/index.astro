  { id: 'carpinteros', name: 'Carpinteros', icon: 'ü™ö', color: 'bg-amber-100 text-amber-700' },
  { id: 'jardineros', name: 'Jardiner√≠a', icon: 'üåø', color: 'bg-green-100 text-green-700' },
  { id: 'limpieza', name: 'Limpieza', icon: '‚ú®', color: 'bg-purple-100 text-purple-700' },
  { id: 'talleres', name: 'Talleres', icon: 'üöó', color: 'bg-red-100 text-red-700' },
];

// 2. DATOS PARA LA TABLA "MEJOR VALORADOS"
const topIds = ['stel-order', 'taclia', 'fixner', 'tooltime', 'houzz-pro'];
const mejoresDelMes = topIds.map(id => softwares.find(s => s.id === id)).filter(Boolean);

// 3. DIRECTORIO R√ÅPIDO
const todosLosSoftwares = softwares.sort((a, b) => a.name.localeCompare(b.name));
---

<Layout title="Comparador de Software para Oficios y Gremios 2026">
  
  {/* HERO HEADER */}
  <header class="bg-blue-900 text-white pt-20 pb-32 px-6 text-center relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
    <div class="relative z-10 max-w-4xl mx-auto">
      <span class="inline-block border border-blue-500 bg-blue-800 rounded-full px-3 py-1 text-xs font-bold uppercase tracking-widest mb-6">
        Actualizado Enero 2026
      </span>
      <h1 class="text-4xl md:text-6xl font-black mb-6 leading-tight tracking-tight">
        Digitaliza tu empresa <br/><span class="text-blue-400">sin equivocarte.</span>
      </h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto opacity-90 leading-relaxed">
        Analizamos y filtramos el mejor software para fontaneros, electricistas y empresas de reformas. Ahorra tiempo y cumple la Ley Verifactu.
      </p>
    </div>
  </header>

  {/* CALCULADORA FLOTANTE */}
  <section class="px-6 relative z-20">
    <BuscadorInteligente />
  </section>

  {/* GRID DE NAVEGACI√ìN POR OFICIOS */}
