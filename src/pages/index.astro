    </div>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
      {oficios.map((oficio) => (
        // üî¥ CORRECCI√ìN: Barra / a√±adida al final del href
        <a href={`/software/${oficio.id}/`} class="group bg-white border border-slate-200 rounded-xl p-6 hover:shadow-lg transition-all hover:-translate-y-1 flex flex-col items-center text-center">
          <div class={`w-14 h-14 rounded-full flex items-center justify-center text-3xl mb-4 transition-transform group-hover:scale-110 ${oficio.color}`}>
            {oficio.icon}
          </div>
          <h3 class="font-bold text-slate-800 group-hover:text-blue-700 transition-colors">{oficio.name}</h3>
        </a>
      ))}
    </div>
  </section>

  {/* üèÜ TABLA MEJOR VALORADOS DEL MES */}
  <section class="max-w-5xl mx-auto px-6 py-12">
    <div class="bg-white rounded-2xl shadow-xl border border-slate-200 overflow-hidden">
      <div class="bg-slate-900 p-6 flex flex-col md:flex-row justify-between items-center gap-4">
        <h2 class="text-2xl font-black text-white flex items-center gap-2">
          üèÜ Top Software del Mes
        </h2>
        <span class="bg-yellow-500 text-yellow-900 text-xs font-bold px-2 py-1 rounded uppercase">Selecci√≥n Editorial</span>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
          <thead>
            <tr class="bg-slate-50 text-xs font-bold uppercase text-slate-500 border-b border-slate-200">
              <th class="p-4">Software</th>
              <th class="p-4 hidden md:table-cell">Lo mejor</th>
              <th class="p-4">Precio</th>
              <th class="p-4"></th>
            </tr>
          </thead>
          <tbody class="text-sm divide-y divide-slate-100">
            {mejoresDelMes.map(soft => (
              <tr class="hover:bg-blue-50/50 transition-colors group">
                <td class="p-4 font-bold text-slate-800">
                  <div class="flex items-center gap-3">
                     {soft.logo_url && <img src={soft.logo_url} alt={soft.name} class="w-6 h-6 object-contain grayscale group-hover:grayscale-0 transition-all" />}
                     <span>{soft.name}</span>
                  </div>
                  <div class="md:hidden text-xs font-normal text-slate-500 mt-1 line-clamp-2">{soft.short_description}</div>
                </td>
                <td class="p-4 text-slate-600 hidden md:table-cell max-w-xs">{soft.short_description}</td>
                <td class="p-4 font-black text-blue-700 whitespace-nowrap">
                    {soft.pricing?.start_price ? `${soft.pricing.start_price}‚Ç¨` : 'Gratis'}
                </td>
                <td class="p-4 text-right">
                  {/* üî¥ CORRECCI√ìN: Barra / a√±adida al final del href */}
