---
// src/pages/software/[sector].astro
import Layout from '../../layouts/Layout.astro';
import softwares from '../../softwares.json';

export async function getStaticPaths() {
  const sectores = [
    // ... (Mant√©n aqu√≠ la lista de sectores: reformas, climatizacion, cerrajeros, carpinteros, jardineros, limpieza, talleres)
    // Aseg√∫rate de incluir todos los que ten√≠as antes para que no den error 404
    { 
      id: 'reformas', 
      nombre: 'Reformas', 
      emoji: 'üß±',
      titulo: 'ERP de Construcci√≥n y Reformas Integrales',
      desc: 'Controla la desviaci√≥n de costes, gestiona certificaciones a origen y retenciones de garant√≠a.',
      filtro: ['reformas', 'construcci√≥n', 'alba√±iler√≠a', 'pintores', 'interiorismo'],
      opinionKey: 'opinion_experto_reformas',
      guiaTitulo: 'Control de Costes en Obras y Reformas',
      guiaTexto: 'El mayor peligro en una reforma es la desviaci√≥n presupuestaria. Estos ERPs permiten imputar horas y materiales a cada proyecto para saber si est√°s ganando o perdiendo dinero en tiempo real.',
      faqs: [
        { q: "¬øC√≥mo controlo si estoy perdiendo dinero en una obra?", a: "Los softwares especializados permiten comparar en tiempo real el presupuesto aceptado contra el gasto real en materiales y horas de personal." },
        { q: "¬øEs posible hacer certificaciones parciales?", a: "S√≠, el sistema permite generar facturas por porcentaje de avance de obra." }
      ],
      bloques: [
        { icon: 'üèóÔ∏è', t: 'Certificaciones', d: 'Factura por avance de obra sin errores manuales.' },
        { icon: 'üìâ', t: 'Control de Costes', d: 'Analiza la rentabilidad real de cada proyecto al momento.' }
      ]
    },
    // ... (A√±ade aqu√≠ el resto de objetos de sector: climatizacion, cerrajeros, carpinteros, jardineros, limpieza, talleres)
  ];

  return sectores.map((sector) => ({
    params: { sector: sector.id },
    props: { info: sector },
  }));
}

const { info } = Astro.props;

// FILTRADO Y ORDENACI√ìN
let especialistas = softwares.filter(s => 
    s.target_gremios && s.target_gremios.some(g => info.filtro.some(term => g.toLowerCase().includes(term)))
);

const vipList = ['stel-order', 'taclia'];
especialistas.sort((a, b) => {
    const vipA = vipList.indexOf(a.id);
    const vipB = vipList.indexOf(b.id);
    if (vipA !== -1 && vipB !== -1) return vipA - vipB;
    if (vipA !== -1) return -1;
    if (vipB !== -1) return 1;
    return (b.legal_spain?.verifactu_ready ? 1 : 0) - (a.legal_spain?.verifactu_ready ? 1 : 0);
});

const topTable = especialistas.slice(0, 5);
---

<Layout title={`Mejor Software para ${info.nombre} 2026`}>
    
    <header class="bg-blue-900 text-white pt-24 pb-20 px-6 relative overflow-hidden">
        <div class="absolute top-0 right-0 opacity-10 text-[200px] pointer-events-none italic font-black">{info.emoji}</div>
        <div class="max-w-4xl mx-auto relative z-10">
            <span class="bg-blue-800 text-blue-200 text-[10px] font-black px-3 py-1 rounded-full uppercase tracking-widest mb-4 inline-block border border-blue-700">Especial {info.nombre} 2026</span>
            <h1 class="text-4xl md:text-6xl font-black mb-4 tracking-tighter leading-tight">{info.titulo}</h1>
            <p class="text-xl text-blue-100 max-w-2xl opacity-90 leading-relaxed">{info.desc}</p>
        </div>
    </header>

    <main class="max-w-5xl mx-auto px-6 -mt-16 relative z-20 pb-20">
        
        {/* TABLA COMPARATIVA */}
        <div class="bg-white rounded-2xl shadow-2xl border border-slate-200 overflow-hidden mb-16">
            <div class="bg-slate-900 p-4"><h2 class="text-white font-bold text-xs uppercase tracking-widest text-center">Comparativa T√©cnica {info.nombre}</h2></div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm">
                    <thead>
                        <tr class="bg-slate-50 border-b border-slate-200 text-xs font-bold uppercase text-slate-500 text-[10px]">
                            <th class="p-4">Software</th>
                            <th class="p-4">Precio</th>
                            <th class="p-4 text-center">App</th>
                            <th class="p-4 text-center">Verifactu</th>
                            <th class="p-4"></th>
                        </tr>
                    </thead>
                    <tbody class="text-slate-700 font-medium">
                        {topTable.map((s) => (
                            <tr class="border-b border-slate-50 hover:bg-slate-50 transition-colors">
                                <td class="p-4 font-bold flex items-center gap-3">
                                  {s.logo_url ? <img src={s.logo_url} class="w-8 h-8 object-contain" /> : "üì±"} {s.name}
                                </td>
                                <td class="p-4 font-black text-blue-700">{s.pricing?.start_price === 0 ? "GRATIS" : `${s.pricing?.start_price}‚Ç¨`}</td>
                                <td class="p-4 text-center text-lg">{s.tabla_tecnica?.app_movil ? '‚úÖ' : '‚ùå'}</td>
                                <td class="p-4 text-center text-lg">{s.legal_spain?.verifactu_ready ? '‚úÖ' : '‚ùå'}</td>
                                <td class="p-4 text-right">
                                    <a href={s.url_afiliado} target="_blank" class="bg-blue-600 text-white text-[10px] font-black px-4 py-2 rounded uppercase tracking-tighter shadow-sm">Ver Web</a>
                                </td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        </div>

        {/* LISTADO DE TARJETAS PRO */}
        <div class="space-y-16 mb-24">
            {especialistas.map((soft) => (
                <div class="bg-white rounded-3xl shadow-xl border border-slate-200 overflow-hidden hover:shadow-2xl transition-all duration-300">
                    <div class="p-6 md:p-12">
                        <div class="flex flex-col md:flex-row md:items-start justify-between gap-8 mb-10">
                            <div class="flex items-start gap-6">
                                <div class="w-24 h-24 bg-white rounded-2xl flex items-center justify-center border border-slate-100 shadow-sm p-3 shrink-0">
                                    {soft.logo_url ? <img src={soft.logo_url} alt={soft.name} class="w-full h-full object-contain" /> : <span class="text-4xl font-black text-slate-200">{soft.name[0]}</span>}
                                </div>
                                <div>
                                    <h3 class="text-3xl font-black text-slate-800">
                                        <a href={`/analisis/${soft.id}?sector=${info.id}`} class="hover:text-blue-700 underline decoration-blue-200 decoration-8 underline-offset-8 transition-all">{soft.name}</a>
                                    </h3>
                                    <div class="flex flex-wrap gap-2 mt-5">
                                        {soft.legal_spain?.verifactu_ready && <span class="text-green-700 font-black text-[10px] uppercase bg-green-50 px-2 py-1 rounded-md border border-green-200 tracking-widest">‚úÖ Verifactu Ready</span>}
                                        <span class="text-blue-700 font-black text-[10px] uppercase bg-blue-50 px-2 py-1 rounded-md border border-blue-200 tracking-widest italic tracking-tighter">An√°lisis 2026</span>
                                    </div>
                                </div>
                            </div>
                            <div class="bg-slate-50 p-4 rounded-2xl text-center min-w-[160px] border border-slate-100">
                                <span class="block text-[10px] font-bold text-slate-400 uppercase mb-1">Desde</span>
                                <span class="text-4xl font-black text-slate-900">{soft.pricing?.start_price === 0 ? 'GRATIS' : `${soft.pricing.start_price}‚Ç¨`}</span>
                                {soft.pricing?.has_free_trial && <div class="text-blue-600 text-[10px] font-black mt-2 uppercase italic tracking-tighter">Prueba Gratuita</div>}
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 items-center border-t border-slate-50 pt-10">
                            <div class="md:col-span-2">
                                <div class="flex items-center gap-2 mb-4">
                                    <span class="w-8 h-1 bg-blue-600 rounded-full"></span>
                                    {/* üöÄ CAMBIO CLAVE AQU√ç: T√≠tulo Din√°mico basado en el sector */}
                                    <h4 class="text-xs font-black text-slate-400 uppercase tracking-widest italic tracking-tighter">¬øPor qu√© para {info.nombre}?</h4>
                                </div>
                                <p class="text-slate-600 text-lg leading-relaxed mb-8 italic">"{soft[info.opinionKey] || soft.short_description}"</p>
                                <div class="flex flex-wrap gap-3">
                                    {soft.features?.slice(0, 4).map(f => <span class="bg-slate-100 text-slate-600 text-[11px] font-bold px-3 py-1.5 rounded-lg border border-slate-200 uppercase tracking-tight">{f}</span>)}
                                </div>
                            </div>
                            <div class="flex flex-col gap-4">
                                <a href={soft.url_afiliado || "#"} target="_blank" rel="nofollow noopener" class="bg-blue-600 hover:bg-blue-800 text-white font-black py-5 rounded-2xl text-center shadow-xl shadow-blue-200 transition-all transform hover:-translate-y-1 uppercase tracking-widest text-sm">Visitar Web Oficial</a>
                                <a href={`/analisis/${soft.id}?sector=${info.id}`} class="text-center text-slate-400 font-bold text-xs hover:text-blue-600 hover:underline underline-offset-4 transition-all uppercase tracking-tighter italic">An√°lisis completo ‚Üí</a>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        {/* GU√çA DE AUTORIDAD + FAQs */}
        <section class="mt-20 bg-white rounded-3xl shadow-2xl border border-slate-200 overflow-hidden p-8 md:p-16">
            <h2 class="text-4xl font-black text-slate-800 mb-6 tracking-tighter underline decoration-yellow-400 decoration-4">{info.guiaTitulo}</h2>
            <p class="text-xl text-slate-600 mb-12 leading-relaxed" set:html={info.guiaTexto}></p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 not-prose mb-16">
                {info.bloques.map(bloque => (
                    <div class="p-8 bg-slate-50 rounded-2xl border border-slate-100 flex gap-6 items-start transition-transform hover:scale-[1.02]">
                        <div class="text-5xl">{bloque.icon}</div>
                        <div>
                           <h4 class="font-black text-slate-900 mb-2 text-lg uppercase tracking-tight">{bloque.t}</h4>
                           <p class="text-sm text-slate-600 leading-relaxed">{bloque.d}</p>
                        </div>
                    </div>
                ))}
            </div>

            <div class="border-t border-slate-100 pt-12">
                <h3 class="text-3xl font-black text-slate-900 mb-10 tracking-tighter">Dudas frecuentes sobre {info.nombre}</h3>
                <div class="space-y-6">
                    {info.faqs.map(faq => (
                        <details class="group bg-slate-50 border border-slate-200 rounded-2xl transition-all overflow-hidden">
                            <summary class="p-6 font-bold text-slate-800 cursor-pointer list-none flex justify-between items-center group-open:bg-blue-600 group-open:text-white transition-all">
                                <span class="text-lg">{faq.q}</span>
                                <span class="transition-transform group-open:rotate-180">‚ñº</span>
                            </summary>
                            <div class="p-8 text-slate-600 bg-white leading-relaxed border-t border-slate-100 text-lg">
                                {faq.a}
                            </div>
                        </details>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>