---
// src/layouts/Layout.astro
import '../styles/global.css';
import Header from '../components/header.astro';

interface Props {
  title: string;
  description?: string;

  // Opcionales (por si luego quieres control fino por página)
  noindex?: boolean;
  ogImage?: string; // ruta absoluta o relativa, ej: "/og/default.png"
}

const {
  title,
  description = "Comparador de software líder para gremios y oficios en España. Encuentra el mejor ERP para fontaneros, electricistas y empresas de reformas.",
  noindex = false,
  ogImage = "/workers.png",
} = Astro.props;

// ✅ Canonical limpio: sin parámetros ni hashes
// Importante: Astro.site debe estar configurado con el dominio canónico.
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// ✅ Robots: por defecto index/follow; se puede forzar noindex desde una página concreta
const robotsContent = noindex ? "noindex, nofollow" : "index, follow";
---

<!doctype html>
<html lang="es-ES">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/png" href="/workers.png" />
    <link rel="apple-touch-icon" href="/workers.png" />

    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    {/* ✅ Robots */}
    <meta name="robots" content={robotsContent} />

    {/* ✅ Open Graph (WhatsApp, Facebook, LinkedIn) */}
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Software Oficios" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    {/* ✅ Twitter Cards */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

    {/* ✅ Recomendación: el sitemap se descubre por robots.txt y Search Console.
        Este link no ayuda a Google. Si quieres mantenerlo no rompe nada,
        pero no es necesario. */}
    {/* <link rel="sitemap" href="/sitemap-index.xml" /> */}
  </head>

  <body class="bg-gray-50 min-h-screen font-sans text-gray-900">
    <Header />

    <main>
      <slot />
    </main>

    <footer class="mt-20 py-12 bg-gray-900 text-white border-t border-gray-800">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <p class="text-gray-400 mb-2">&copy; 2026 Obra Digital. Comparador independiente.</p>
        <p class="text-xs text-gray-600">Ayudando a digitalizar los oficios en España.</p>
      </div>
    </footer>
  </body>
</html>
