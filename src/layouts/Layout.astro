---
// src/layouts/Layout.astro
import '../styles/global.css'; // <--- ¡ESTA ES LA LÍNEA MÁGICA QUE FALTABA!

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Comparador de software para gremios" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 min-h-screen font-sans text-gray-900">
		<nav class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
			<div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
				<a href="/" class="text-xl font-extrabold text-indigo-700 tracking-tight hover:text-indigo-800 transition">
                    Obra<span class="text-gray-900">Digital</span>
                </a>
                <div class="flex gap-4 md:gap-6 text-sm font-medium text-gray-600">
                    <a href="/sectores/fontaneros" class="hover:text-indigo-600 transition">Fontaneros</a>
                    <a href="/sectores/reformas" class="hover:text-indigo-600 transition">Reformas</a>
                </div>
			</div>
		</nav>
		
		<main>
		    <slot />
        </main>

		<footer class="mt-20 py-12 bg-gray-900 text-white border-t border-gray-800">
            <div class="max-w-6xl mx-auto px-4 text-center">
			    <p class="text-gray-400 mb-2">&copy; 2024 Obra Digital. Comparador independiente.</p>
            </div>
		</footer>
	</body>
</html>