---
// src/layouts/Layout.astro
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Comparador de software para gremios" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 min-h-screen font-sans text-gray-900">
		
		<Header />
		
		<main>
			<slot />
		</main>

		<footer class="mt-20 py-12 bg-gray-900 text-white border-t border-gray-800">
			<div class="max-w-6xl mx-auto px-4 text-center">
				<p class="text-gray-400 mb-2">&copy; 2024 Obra Digital. Comparador independiente.</p>
			</div>
		</footer>
	</body>
</html>