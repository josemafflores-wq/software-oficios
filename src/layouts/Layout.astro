// src/layouts/Layout.astro
import '../styles/global.css';
import Header from '../components/header.astro';

interface Props {
    title: string;
    description?: string; // üëà Nueva propiedad opcional
}

// Si no nos pasan descripci√≥n, usamos esta por defecto (para la Home)
